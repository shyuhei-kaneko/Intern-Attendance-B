<% provide(:title, @user.name) %>
<% provide(:search_name, 'ユーザー検索') %>
<% provide(:path, user_path) %>
<div class="row">
<!--(中略)-->
  <div class="col-md-8">
    <%= render 'follow_form' if logged_in? %>
    <% if @user.microposts.any? %>
      <h3>Microposts (<%= @user.microposts.count %>)</h3>
      <%= render 'users/search' %>  　
      <ol class="microposts">
        <%= render @microposts %>
      </ol>
      <%= will_paginate @microposts %>
    <% end %>
  </div>
</div>